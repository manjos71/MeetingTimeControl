<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp"
    android:background="@color/colorAccent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/tela1"
        android:id="@+id/image_header"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_drawer_header"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/image_header"
        android:textSize="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="manjos71@gmail.com"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/image_header"
        android:textSize="13dp"
        android:layout_below="@id/title_drawer_header"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>